<project>
    <build>
        <plugins>
            <plugin>
				<groupId>challenges</groupId>
				<artifactId>swagger-generator</artifactId>
				<version>0.0.1-SNAPSHOT</version>
                <configuration>
                    <apiSources>
                        <apiSource>
                            <locations>
                                <location>com.groupon.swagger.test.files</location>
                            </locations>
                            <schemes>
                                <scheme>http</scheme>
                                <scheme>https</scheme>
                            </schemes>
                            <host>www.groupon.com</host>
                            <basePath>/api</basePath>
                            <info>
                                <title>Swagger Maven Plugin Sample</title>
                                <version>v1</version>
                                <description>
                                    The description of the API
                                </description>
                                <termsOfService>
                                    http://www.github.com/ahamouda/swagger-generator
                                </termsOfService>
                                <contact>
                                    <email>ahamouda@groupon.com</email>
                                    <name>Ahmed Hamouda</name>
                                    <url>http://www.test.com</url>
                                </contact>
                                <license>
                                    <url>http://www.apache.org/licenses/LICENSE-2.0.html</url>
                                    <name>Apache 2.0</name>
                                </license>
                            </info>
                            <outputFormats>json</outputFormats>
                            <swaggerDirectory>${basedir}/generated/swagger-ui-spring</swaggerDirectory>
                        </apiSource>
                    </apiSources> 
                </configuration>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
